@using EBuy.DAL.Models.Results
@model List<SaleResult>
@{
    Layout = "~/Views/Layout.cshtml";
}

@section style
{
    <link href="~/css/sales.css" rel="stylesheet" />
}

<section class="main">
    <h2>My cart</h2>
    <table>
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Product Name</th>
                <th>Amount</th>
                <th>Total Price</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CustomerName</td>
                    <td>@item.ProductName</td>
                    <td>@item.Amount</td>
                    <td>@item.TotalPrice ₺</td>
                    <td>@item.Date.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
</section>